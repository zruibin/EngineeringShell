{
  "name": "engineering-shell",
  "productName": "Engineering Shell",
  "description": "A Engineering Shell",
  "keywords": [],
  "main": "src/main/main.js",
  "version": "1.0.0",
  "author": "Ruibin.Chow",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --hot --host 0.0.0.0 --config=./webpack.config.js --mode development",
    "prod": "cross-env NODE_ENV=production webpack --mode production --config webpack.config.js && electron --noDevServer .",
    
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js --mode production",
    "package": "npm run build && electron-builder --dir",
    "install": "npm run build && electron-builder"
  },
  "build": {
    "appId": "cn.zruibin.engineering_shell",
    "productName": "Engineering Shell",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "node_modules/**/*",
      "!node_modules/**/*/{CHANGELOG.md,README.md,README,readme.md,readme}"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "electron": "32.2.8",
    "electron-builder": "^25.1.8",
    "electron-debug": "3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "1.5.0",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "antd": "^5.4.6",
    "babel-loader": "^8.2.5",
    "bindings": "^1.5.0",
    "concurrently": "8.0.1",
    "cross-env": "7.0.3",
    "css-loader": "^6.7.1",
    "electron-connect": "0.6.3",
    "electron-log": "4.4.8",
    "electron-updater": "5.3.0",
    "events": "^3.3.0",
    "file-loader": "^6.2.0",
    "fs-extra": "^11.1.1",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "postcss": "^8.4.8",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^7.0.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.6.0",
    "postcss-pxtorem": "^6.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.8.1",
    "style-loader": "^3.3.1"
  }
}
