{
  "name": "engineering-shell-ts",
  "productName": "Engineering Shell",
  "description": "A Engineering Shell",
  "author": "Ruibin.Chow",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "delete": "node script/delete.js",
    "start": "npm run delete && concurrently -k \"cross-env NODE_ENV=development webpack --watch --config=webpack.main.config.js\" \"cross-env NODE_ENV=development webpack serve --config=webpack.renderer.config.js\" \"wait-on http://localhost:3000 && electron .\"",
    "compile": "bytenode -c dist/main/*.js --electron && node script/compile.js",
    "build": "npm run delete && concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:main": "cross-env NODE_ENV=production webpack --config webpack.main.config.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.config.js",
    "package": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "license": "MIT",
  "build": {
    "appId": "cn.zruibin.engineering_shell_ts",
    "productName": "Engineering Shell TS",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/main/boot.js",
      "dist/main/main.jsc",
      "dist/main/**/*",
      "dist/renderer/**/*",
      "!dist/**/*.{map,txt}",
      "node_modules/**/*",
      "!node_modules/**/*/{README,readme,LICENSE,license}",
      "!node_modules/**/*/*.md",
      "!node_modules/**/*/*.map",
      "!node_modules/**/*/*.txt"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "antd": "^5.24.1",
    "electron-log": "^5.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "babel-loader": "^9.2.1",
    "bytenode": "1.5.6",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "30.4.0",
    "electron-builder": "^25.1.8",
    "electron-debug": "3.2.0",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "wait-on": "^8.0.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "webpack-node-externals": "^3.0.0",
    "ws": "^8.18.0"
  }
}
